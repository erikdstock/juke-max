<%= form_for @playlist, class: "col s12" do |f| %>
	<div class="row">
		<div class="input-field col s12 m6">
			<%= f.text_field :name %>
			<%= f.label :name %>
		</div>		
		<div class="input-field col s12 m6">
			<%= f.text_field :link_name %>
			<%= f.label :link_name %>
		</div>
	</div>
	<div class="row">
		<div class="input-field col s12 m6">
			<%= button_tag(type: 'submit', class: "btn waves-effect waves-light") do %>
				<i class="material-icons right">send</i> Submit
			<% end %>
		</div>
	</div>
<% end %>