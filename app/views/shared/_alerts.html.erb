<% if @errors %>
  <div data-alert class='alert-box alert radius' >
    <% @errors.each do |error| %>
      <%= error %>
    <% end %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
<% if flash[:notice] %>
    <div class="card-panel amber notice">
    	<%=flash[:notice]%>
    </div>
<% end %>
<% if flash[:alert] %>
    <div class="card-panel amber alert">
    	<%=flash[:alert]%>
    </div>
<% end %>
